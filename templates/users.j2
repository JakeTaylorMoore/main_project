{%  extends 'main.j2' %}

{% block header %}
    <h1>{% block title %} Users {% endblock %}</h1>
{%  endblock %}

{%  block content %}

    <table>
    <thead>
    <tr>
        <!-- Iterate through each key in the first entry to get the
        column name -->
        {% for key in Users[0].keys() %}

        <!-- Create a <th> tag with the key inside of it, this will be
        our header row -->
        <th>{{ key }}</th>

        <!-- End of this for loop -->
        {% endfor %}
        <th>Edit</th>
        <th>Delete</th>
    </tr>


    <tbody>
    <!-- Now, iterate through every person in bsg_people -->
    {% for user in Users %}
    <tr>
        <!-- Then iterate through every key in the current person dictionary -->
        {% for key in user.keys() %}

        <!-- Create a <td> element with the value of that key in it -->
        <td>{{user[key]}}</td>
        {% endfor %}
        <td><a href="/update-user/{{ user.user_id }}">Edit</a></td>
        <td><a href="/delete-user/{{user.user_id}}">Delete</a></td>
    </tr>
    {% endfor %}
    </table>

    <button><a href="{{ url_for('add_users') }}">Add User</a></button>


{%  endblock %}