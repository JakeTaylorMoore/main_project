{%  extends 'main.j2' %}

{% block header %}
    <h1>{% block title %} Add Playlist {% endblock %}</h1>
{%  endblock %}

{%  block content %}
    <table>
        <form method="POST" id="addPlaylist">

<tr>
        <th>Created At:</th>
        <th>Title:</th>
        <th>User ID:</th>

</tr>

             <tr>
                 <td><input type="date" name="created_at" value="{{ today_date }}"></td>
                 <td><input type="text" name="title" placeholder="playlist title"></td>
                 <td><input type="number" name="user_id" placeholder="User ID"></td>



    </table>

        <button>Add Playlist</button>
    </form>
{%  endblock %}