{%  extends 'main.j2' %}

{% block header %}
    <h1>{% block title %} Songs {% endblock %}</h1>
{%  endblock %}

{%  block content %}

    <table>
    <thead>
    <tr>
        <!-- Iterate through each key in the first entry to get the
        column name -->
        {% for key in Songs[0].keys() %}

        <!-- Create a <th> tag with the key inside of it, this will be
        our header row -->
        <th>{{ key }}</th>

        <!-- End of this for loop -->
        {% endfor %}
        <th>Edit</th>
        <th>Delete</th>
    </tr>


    <tbody>
    <!-- Now, iterate through every song in songs -->
    {% for song in Songs %}
    <tr>
        <!-- Then iterate through every key in the current person dictionary -->
        {% for key in song.keys() %}

        <!-- Create a <td> element with the value of that key in it -->
        <td>{{song[key]}}</td>
        {% endfor %}
        <td><a href="/update-song/{{ song.song_id }}">Edit</a></td>
        <td><a href="/delete-song/{{song.song_id}}">Delete</a></td>
    </tr>
    {% endfor %}
    </table>

    <button><a href="{{ url_for('add_song') }}">Add Song</a></button>


{%  endblock %}